<section class="list--banner" style="<%= prepend_image_gradient(@list.image_url) %>">
  <div class="container w-80">
    <h1 class="text-white text-center fw-bold"><%= @list.name %></h1>
  </div>
</section>


<main class="p-5">
  <section>
    <div class="container w-80 py-5 d-flex justify-content-end">
      <%= link_to 'Add bookmark', new_list_bookmark_path(@list), class: 'btn btn-outline-primary' %>
    </div>
  </section>

  <section class="bookmarks">
    <div class="container w-80 row row-cols-4">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="bookmarks--card col-12 col-md-6 col-lg-3 m-1" style="<%= prepend_image_gradient(bookmark.movie.poster_url) %>">
          <div class="bookmarks--card__description bg-light p-3">
            <p>
              <small>
                <span class="fw-bold"><%= bookmark.movie.title %></span>
                <span><i class="fas fa-star"></i> <%= bookmark.movie.rating %></span>
              </small>
            </p>
            <p><small><%= bookmark.movie.overview %></small></p>
            <small>
              <i class="fas fa-quote-left"></i>
              <span class="opacity-75"><%= bookmark.comment %></span>
            </small>
          </div>
        </div>
      <% end %>
    </div>
  </section>
</main>
